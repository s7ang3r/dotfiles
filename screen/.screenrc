defutf8 on
defflow auto
deflogin on
caption always
caption string '%{+b d.}%n* %t%{-}'
hardstatus alwayslastline  '%{-b d.}%-w%{+b d.}%n* %t%{-}%+w %{d.}%-=%1` %{+Bb r}%3`%{-Bb d.} %2` (%l) %4` %c%{-}'
caption splitonly
vbell off
vbell_msg "vbell %n"
bell_msg "Bell %n"
activity "Activity on %n"
defmonitor on
defscrollback 10000
crlf off
startup_message off
defbce on
autodetach on
altscreen on
bind + resize +3
bind - resize -1
bufferfile ~/.bak/screen-exchange
markkeys "h=^B:l=^F:$=^E"
bindkey "^[[5;2~" eval "copy" "stuff ^u"
bindkey -m "^[[5;2~" stuff ^u
bindkey -m "^[[6;2~" stuff ^d
bind l focus down
bind h focus up
bind j focus left
bind k focus right
bind ^k
bind ^s
bind ^\
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
attrcolor b ".I"
termcapinfo xterm* ti@:te@
term screen-256color-bce
termcap  xterm hs@:cs=\E[%i%d;%dr:im=\E[4h:ei=\E[4l
terminfo xterm hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l
